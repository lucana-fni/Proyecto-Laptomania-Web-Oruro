@model IEnumerable<LaptoManiaOficial.Models.Usuario>

@{
    ViewData["Title"] = "Index";
}

<link rel="stylesheet" href="~/css/stylesUsuario.css" />

<h1>Registrar Usuarios</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CorreoElectronico)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NombreCompleto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rol)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CorreoElectronico)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NombreCompleto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rol)
            </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success text-dark">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info text-dark">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger text-dark">Delete</a>
                </td>


        </tr>
}
    </tbody>
</table>
