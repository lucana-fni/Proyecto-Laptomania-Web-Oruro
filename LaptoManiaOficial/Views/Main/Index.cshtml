@model IEnumerable<LaptoManiaOficial.Models.Equipo>
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PRODUCTOS</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f8f9fa;
            margin: 0;
            padding: 0;
        }

        .header-container {
            position: relative;
            text-align: center;
        }

        .header-image img {
            width: 100%;
            max-height: 200px; /* Ajusta la altura según sea necesario */
            border-bottom: 1px solid #ddd;
        }

        .container {
            position: relative;
            z-index: 1;
            background-color: #ffffff;
            padding: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            margin-top: -50px; /* Ajusta según sea necesario */
        }

        .product-card {
            border: 1px solid #ddd;
            border-radius: 10px;
            overflow: hidden;
            margin-bottom: 20px;
            transition: box-shadow 0.3s;
            background-color: #ffffff;
        }

            .product-card:hover {
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            }

        .product-image img {
            width: 100%;
            max-height: 150px; /* Ajusta según sea necesario */
            border-bottom: 1px solid #ddd;
        }

        .product-details {
            padding: 15px;
        }

            .product-details h3 {
                margin-top: 0;
                color: #007bff; /* Color azul */
            }

        .product-subtitle {
            font-size: 14px;
            color: #777;
        }

        .btn-login {
            margin-top: 10px;
        }

        .text-center {
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="header-container">
        <img src="~/imagenes/Main.jpg" class="header-image" alt="Encabezado" />
    </div>

    <div class="container mt-5">
        <h1 class="text-center">LAPTOPS</h1>
        <hr />

        <div class="row">
            @foreach (var equipo in Model)
            {
                <div class="col-md-4">
                    <div class="product-card">
                        <div class="product-image">
                            @if (!string.IsNullOrEmpty(equipo.Foto))
                            {
                                <img src="~/fotos/equipos/@equipo.Foto" class="img-fluid" alt="Foto del Producto" />
                            }
                        </div>
                        <div class="product-details">
                            <h3>@Html.DisplayFor(modelItem => equipo.Modelo)</h3>
                            <p class="product-subtitle">@Html.DisplayFor(modelItem => equipo.Marca)</p>
                            <p><strong>Código:</strong> @Html.DisplayFor(modelItem => equipo.Codigo)</p>
                            <p><strong>Precio:</strong> @Html.DisplayFor(modelItem => equipo.Precio)</p>
                            <p><strong>Disponibilidad:</strong> @Html.DisplayFor(modelItem => equipo.Disponibilidad)</p>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="text-right fixed-top pt-3 pr-3">
            <a href="/Login/Index" class="btn btn-primary btn-login">Iniciar Sesión</a>
        </div>
    </div>
</body>
</html>
