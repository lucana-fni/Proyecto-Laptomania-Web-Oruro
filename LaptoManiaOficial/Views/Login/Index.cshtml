@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>LOGIN</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/stylesLogin.css">
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-sm-4"></div>
            <div class="col-sm-4" style="padding-top: 100px">
                <img class="img-logo" src="/imagenes/LogoLogin.jpg" alt="Logo LaptopMania">
                <h1 class="h3 mb-3 fw-normal text-center">LOGIN</h1>
                <h5 class="text-center">SISTEMA LAPTOPMANIA OFICIAL</h5>
                <form asp-controller="Login" asp-action="Login" method="post">
                    <div class="mb-3">
                        <label for="correo">Correo Electrónico</label>
                        <input type="email" id="correo" name="email" class="form-control" autocomplete="off" required placeholder="Introduce tu correo electrónico">
                    </div>
                    <div class="mb-3">
                        <label for="contrasena">Contraseña</label>
                        <input type="password" id="contrasena" name="password" class="form-control" required placeholder="Introduce tu contraseña">
                    </div>
                    
                    <div class="text-center">
                        <button class="btn btn-dark btn-lg" type="submit">Ingresar al Sistema</button>
                    </div>
                    <div class="text-center mt-3">
                        <a href="/Main/Index" class="btn btn-dark btn-lg">Volver</a>
                    </div>

                </form>

                @if (TempData["LoginError"] != null)
                {
                    <div class="alert alert-danger">@TempData["LoginError"]</div>
                }

                

                <p class="mt-5 mb-3 text-muted">&copy; 2023</p>
            </div>
            <div class="col-sm-4"></div>
        </div>
    </div>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
