@model IEnumerable<LaptoManiaOficial.Models.Secretaria>

@{
    ViewData["Title"] = "Index";
}

<link rel="stylesheet" href="~/css/stylesRegistros.css" />

<h1>Registro de Secretarias</h1>
<form asp-action="Index" asp-controller="Secretarias" method="get">
    <div class="row">
        <div class="col-sm-10 form-group">
            <label for="search" class="text-black">Buscar</label>
            <input name="search" id="search" class="form-control" />
        </div>
        <div class="col-sm-2">
            <button type="submit" class="btn btn-dark mt-4">Buscar</button>
        </div>
    </div>
</form>
<br />
<p>
    <a asp-action="Create">Crear nuevo Registro</a>
</p>
<div class="container-inf">
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Ci)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NombreCompleto)
            </th>
      
            <th>
                Cuenta
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Ci)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NombreCompleto)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.Usuario.CorreoElectronico)
            </td>
            <td>
                 <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success text-white">Editar</a>
                 <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info text-white">Detalles</a>
                 <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger text-white">Borrar</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>