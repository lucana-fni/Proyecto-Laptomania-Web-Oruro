@model LaptoManiaOficial.Models.Equipo

@{
    ViewData["Title"] = "Details";
}
<link rel="stylesheet" href="~/css/stylesDetalles.css" />
<h1>Detalles</h1>

<div>
    <h4>Equipo</h4>
    <hr />

    <div class="row">
        <div class="col-sm-4">
            @if (Model.Foto != null)
            {
                <img src="~/fotos/equipos/@Model.Foto" class="img-thumbnail" width="150px" />
            }
        </div>
        <div class="col-sm-8">

            <dl class="row">
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Codigo)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Codigo)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Marca)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Marca)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Modelo)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Modelo)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Precio)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Precio)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Disponibilidad)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Disponibilidad)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Foto)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Foto)
                </dd>
            </dl>
        </div>
    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-success text-white">Editar</a> 
    <a asp-action="Index" class="btn btn-danger text-white">Volver al Registro</a>
</div>
