@model IEnumerable<LaptoManiaOficial.Models.Equipo>

@{
    ViewData["Title"] = "Index";
}
<link rel="stylesheet" href="~/css/stylesRegistros.css" />
<h1>Equipos Registrados</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="container-inf">
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Codigo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Marca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Modelo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Disponibilidad)
            </th>
            <!--Fotos-->
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Codigo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Marca)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Modelo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Disponibilidad)
            </td>
                <!--Fotos-->
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success text-white">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info text-white">Detalles</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger text-white">Borrar</a>
                    </td>
        </tr>
}
    </tbody>
</table>
</div>